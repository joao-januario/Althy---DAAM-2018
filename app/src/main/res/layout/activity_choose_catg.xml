<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_w_shadows"
    tools:context=".AppNav.ChooseCatg">

    <ToggleButton
        android:id="@+id/btn_classicQuizz"
        style="@style/ButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:drawableTop="@drawable/quizz_1"
        android:text="Quizz Clássico"
        android:textOff="Quizz Clássico"
        android:textOn="Quizz Clássico"
        app:layout_constraintBottom_toTopOf="@+id/rounds_count_tv"
        tools:layout_editor_absoluteX="0dp" />

    <ToggleButton
        android:id="@+id/btn_closerWins"
        style="@style/ButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:drawableTop="@drawable/closer_wins_1"
        android:text="Mais Perto Ganha"
        android:textOff="Mais Perto Ganha"
        android:textOn="Mais Perto Ganha"
        app:layout_constraintBottom_toTopOf="@+id/btn_classicQuizz"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/rounds_count_tv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/border_style"
        android:paddingLeft="35dp"
        android:paddingTop="10dp"
        android:text="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:typeface="normal"
        app:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_increaseRound"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/rounds_tv" />

    <Button
        android:id="@+id/btn_decreaseRound"
        style="@style/ButtonStyle"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:drawableTop="@drawable/decrease_ic"
        android:padding="-90dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_increaseRound"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_increaseRound"
        style="@style/ButtonStyle"
        android:layout_width="121dp"
        android:layout_height="46dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:drawableTop="@drawable/increase_ic"
        android:padding="-90dp"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_classicQuizz" />

    <TextView
        android:id="@+id/rounds_tv"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="25dp"
        android:text="Rondas"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#c70b37"
        android:textSize="40sp"
        android:textStyle="bold"
        android:shadowColor="#ffffff"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_classicQuizz"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>